<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_layout_bg"
    tools:context=".ui.activity.AllReviewsActivity">

    <include
        android:id="@+id/toolbar_all_reviews"
        layout="@layout/toolbar" />

    <androidx.recyclerview.widget.RecyclerView
        android:paddingTop="4dp"
        android:clipToPadding="false"
        android:id="@+id/rv_all_reviews"
        tools:listitem="@layout/all_reviews_holder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="8dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_all_reviews" />
</androidx.constraintlayout.widget.ConstraintLayout>